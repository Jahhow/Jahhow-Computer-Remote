<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/SendTextEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/input_text"
                android:inputType="textMultiLine"
                android:minWidth="280dp"
                android:textSize="24sp" />
        </android.support.design.widget.TextInputLayout>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/inputTextButtonBackspace"
                    style="@style/AppTheme.InputTextButton"
                    android:onClick="SendClick_Backspace"
                    android:src="@drawable/ic_backspace_black_24dp" />

                <ImageView
                    android:id="@+id/inputTextButtonEnter"
                    style="@style/AppTheme.InputTextButton"
                    android:onClick="SendClick_Enter"
                    android:src="@drawable/ic_enter_24dp" />

                <ImageView
                    android:id="@+id/buttonSend"
                    style="@style/AppTheme.InputTextButton"
                    android:src="@drawable/ic_send_24dp" />

                <ImageView
                    android:id="@+id/buttonPasteText"
                    style="@style/AppTheme.InputTextButton"
                    android:src="@drawable/ic_content_paste_black_24dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>